<h1>Cursos</h1>
<div class="container">
    <div class="bs-component">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Sigla</th>
                    <th scope="col">Nome</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>           
                {{#each cursos}}
                    <tr>
                        <td>{{sigla}}</td>
                        <td>{{nome}}</td>
                        <td>
                            <a href="/curso/{{id}}"><i class="fa-solid fa-eye"></i></a>
                            <a href="/curso/update/{{id}}"><i class="fa-solid fa-file-pen"></i></a>
                            <a href="/curso/remove/{{id}}"><i class="fa-solid fa-trash"></i></a>
                            
                        </td>
                    </tr>
                {{/each}}         
            </tbody>
        </table>
    </div>
</div>