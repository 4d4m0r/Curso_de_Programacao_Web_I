<div class="container">
    <h1>Alterar Curso</h1>
    <form action="/curso/update/{{curso.id}}" method="POST">
        <input type="hidden" name="_csrf" value="{{csrf}}">
        <div class="form-group">
            <label for="sigla">Sigla do Curso</label>
            <input name="sigla" value="{{curso.sigla}}" id="sigla" type="text" class="form-control" placeholder="Informe a sigla do curso.">
            <small id="emailHelp" class="form-text text-muted">Em caso de dúvida consulte o site da UFAM.</small>
        </div>
        <div class="form-group">
            <label for="nome">Nome do Curso</label>
            <input name="nome" value="{{curso.nome}}" id="nome" type="text" class="form-control" placeholder="Informe o nome do curso.">
            <small id="emailHelp" class="form-text text-muted">Em caso de dúvida consulte o site da UFAM.</small>
        </div>
        <div class="form-group">
            <label for="exampleTextarea" class="form-label mt-4">Descricao</label>
            <textarea name="descricao" id="descricao" class="form-control" id="exampleTextarea" rows="3">{{curso.descricao}}</textarea>
        </div>
        <fieldset class="form-group">
            <legend class="mt-4">Área da Ciência</legend>
            <div class="form-check">
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="area" id="area" value="1" {{checked curso.areaId 1}}>
                    Ciências Exatas.
                </label><br>
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="area" id="area" value="2" {{checked curso.areaId 2}}>
                    Ciências Biológicas.
                </label><br>
                <label class="form-check-label">
                    <input type="radio" class="form-check-input" name="area" id="area" value="3" {{checked curso.areaId 3}}>
                    Ciências Humanas.
                </label><br>
            </div>
        </fieldset>
        <button type="submit" class="btn btn-primary">Adicionar</button>
    </form>
</div>
