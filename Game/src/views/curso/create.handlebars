<h1>Adicionar curso</h1>

<form action="/curso/create" method="post">

<div class="form-group">
    <label for="nome" class="form-label mt-4">Nome do Curso</label>
    <input type="text" class="form-control" id="nome" placeholder="Informe o nome do curso" name="nome">
</div>

<fieldset class="form-group">
    <legend class="mt-4">Área da ciência</legend>
    <div class="form-check">
        <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="area" value="1" checked="">
            Ciências Exatas.
        </label>
        <br>
        <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="area" value="2" checked="">
            Ciências Humanas.
        </label>
        <br>
        <label class="form-check-label">
            <input type="radio" class="form-check-input" name="area" id="area" value="3" checked="">
            Ciências Biológicas.
        </label>
    </div>
</fieldset>

<button type="submit" class="btn btn-primary">Adicionar</button>

</form>